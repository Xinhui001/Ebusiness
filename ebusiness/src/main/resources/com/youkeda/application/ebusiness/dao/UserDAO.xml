<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.youkeda.application.ebusiness.dao.UserDAO">

    <resultMap id="userResultMap" type="com.youkeda.application.ebusiness.dataobject.UserDO">
        <id column="id" property="id"/>
        <result column="gmt_created" property="gmtCreated"/>
        <result column="gmt_modified" property="gmtModified"/>
        <result column="user_name" property="userName"/>
        <result column="password" property="password"/>
        <result column="mobile" property="mobile"/>
        <result column="email" property="email"/>
        <result column="name" property="name"/>
        <result column="avatar_url" property="avatarUrl"/>
        <result column="gender" property="gender"/>
    </resultMap>

    <insert id="batchAdd" parameterType="java.util.List" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (
        gmt_created, gmt_modified, user_name, password, mobile, email, name, avatar_url, gender
        ) VALUES
        <foreach collection="list" item="it" index="index" separator=",">
            (
            now(), now(), #{it.userName}, #{it.password}, #{it.mobile}, #{it.email}, #{it.name}, #{it.avatarUrl}, #{it.gender}
            )
        </foreach>
    </insert>

    <insert id="add" parameterType="com.youkeda.application.ebusiness.dataobject.UserDO" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (
        gmt_created, gmt_modified, user_name, password, mobile, email, name, avatar_url, gender
        ) VALUES
        (
        now(), now(), #{userName}, #{password}, #{mobile}, #{email}, #{name}, #{avatarUrl}, #{gender}
        )
    </insert>

    <update id="update" parameterType="com.youkeda.application.ebusiness.dataobject.UserDO">
        update user
        <set>
            <if test="userName != null">
                user_name=#{userName},
            </if>
            <if test="password != null">
                password=#{password},
            </if>
            <if test="mobile != null">
                mobile=#{mobile},
            </if>
            <if test="email != null">
                email=#{email},
            </if>
            <if test="avatarUrl != null">
                avatar_url=#{avatarUrl},
            </if>
            <if test="gender != null">
                gender=#{gender},
            </if>
        </set>
        gmt_modified=now()
        where id=#{id}
    </update>

    <delete id="delete">
        delete from user where id=#{id}
    </delete>

    <select id="findByUserName" resultMap="userResultMap">
        select * from user where user_name=#{userName}
    </select>

    <select id="findByIds" resultMap="userResultMap">
        select * from user
        <where>
            id in
            <foreach item="item" index="index" collection="ids"
                     open="(" separator="," close=")">
                #{item}
            </foreach>
        </where>
    </select>

</mapper>